
conky.config = {
    alignment = 'top_right',
    background = true,
    border_width = 1,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'DejaVu Sans Mono:size=10',
    gap_x = 20,
    gap_y = 40,
    minimum_height = 5,
    minimum_width = 200,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'normal',
    own_window_hints = 'undecorated,sticky,below,skip_taskbar,skip_pager',
    own_window_argb_visual = true,
    own_window_argb_value = 0,
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 2.0,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
}

conky.text = [[
Host:$alignr${nodename}
Kernel:$alignr ${kernel}

$hr

${color}Uptime:$alignr$color $uptime_short
${color}RAM Usage:$alignr$color $mem / $memmax
${color}Swap Usage:$alignr$color $swap / $swapmax
${color}Processes:$alignr$color $processes

$alignc${cpugraph cpu0 50,290 white white}

$hr

/ $alignr${fs_used /} / ${fs_size /}

$hr

IP-Adress: $alignr${addr br0}
Up: $alignr${upspeed br0}
Down: $alignr${downspeed br0}

Public IP: $alignr${execi 3600 curl icanhazip.com}

$hr

${color}CPU Usage:$alignr$color $cpu%
${color}Frequency:$alignr$color${freq}MHz
# Ryzen
#CPU Temp: $alignr${execi 3 sensors | awk '/CPUTIN:/ {print $2}' | sed 's/+//g' | sed 's/°C//g'}
# NUC
CPU Temp: $alignr${execi 3 sensors | awk '/Package id 0:/ {print $4}' | sed 's/+//g' | sed 's/°C//g'}
]]
